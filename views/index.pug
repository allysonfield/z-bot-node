doctype html
html
  head
    meta(charset="utf-8")
    link(rel="shortcut icon", href="/favicon.ico")
    meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
    meta(name="theme-color", content="#000000")
    title #{title}
    style.
      body {
        margin: 0;
        height: 100vh;
      }
      #root {
        height: 100%;
      }
      .View {
        display: flex;
        height: 100%;
        align-items: center;
        background-color: #333;
      }
      .Title {
        margin: 0;
        width: 100%;
        text-align: center;
        font-size: 3em;
        color: #FFF;
      }
  body
    div#root
      div.View
        h1.Title #{message}